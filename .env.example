# ============================================
# My Trip - 환경변수 설정 예시
# ============================================
# 이 파일을 복사하여 .env 파일을 생성하고 실제 값으로 채워주세요.
# .env 파일은 절대 Git에 커밋하지 마세요!

# ============================================
# 한국관광공사 API
# ============================================
# 한국관광공사 공공데이터포털(https://www.data.go.kr)에서 발급받은 API 키
# NEXT_PUBLIC_TOUR_API_KEY 우선 사용, 없으면 TOUR_API_KEY 사용
NEXT_PUBLIC_TOUR_API_KEY=your_tour_api_key_here
# TOUR_API_KEY=your_tour_api_key_here  # 서버 사이드 전용 (선택사항)

# ============================================
# 네이버 지도 API
# ============================================
# 네이버 클라우드 플랫폼(https://www.ncloud.com)에서 발급받은 Client ID
# Web Dynamic Map 서비스 활성화 필요
NEXT_PUBLIC_NAVER_MAP_CLIENT_ID=your_naver_map_client_id_here

# ============================================
# Clerk Authentication
# ============================================
# Clerk Dashboard(https://dashboard.clerk.com)에서 발급받은 키
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_secret_key_here

# Clerk 라우팅 설정
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_IN_FALLBACK_REDIRECT_URL=/
NEXT_PUBLIC_CLERK_SIGN_UP_FALLBACK_REDIRECT_URL=/

# ============================================
# Supabase
# ============================================
# Supabase Dashboard(https://app.supabase.com)에서 발급받은 키
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Supabase Storage 버킷 이름
NEXT_PUBLIC_STORAGE_BUCKET=uploads

# ============================================
# 사이트 URL (SEO 최적화용)
# ============================================
# 프로덕션 배포 시 실제 도메인으로 변경
# 예: https://my-trip.vercel.app
NEXT_PUBLIC_SITE_URL=http://localhost:3000
